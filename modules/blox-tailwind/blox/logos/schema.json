{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/logos.json",
  "title": "Logos Block Schema",
  "description": "Schema for the Logos block - showcases partner/customer logos in grid, carousel, or marquee layouts",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "logos",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "subtitle": {
              "type": "string"
            },
            "text": {
              "type": "string"
            },
            "logos": {
              "type": "array",
              "description": "Explicit list of logos to render",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Partner/customer name (used for alt text)"
                  },
                  "image": {
                    "type": "string",
                    "description": "Logo image filename in assets/media/"
                  },
                  "description": {
                    "type": "string",
                    "description": "Tooltip/hover description"
                  },
                  "url": {
                    "type": "string",
                    "description": "Optional link URL"
                  },
                  "external": {
                    "type": "boolean",
                    "description": "Open URL in a new tab",
                    "default": false
                  }
                },
                "required": ["image"],
                "additionalProperties": false
              }
            },
            "logo_folder": {
              "type": "string",
              "description": "Folder in assets/media/ containing logo images (used when `logos` is not provided)"
            },
            "cta": {
              "type": "object",
              "description": "Optional call-to-action button beneath the logos",
              "properties": {
                "url": {
                  "type": "string"
                },
                "text": {
                  "type": "string"
                },
                "icon": {
                  "type": "string"
                }
              },
              "required": ["url", "text"],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "design": {
          "type": "object",
          "description": "Display options for the logos block",
          "properties": {
            "display_mode": {
              "type": "string",
              "enum": ["grid", "carousel", "marquee"],
              "description": "Layout style for the logos",
              "default": "grid"
            },
            "show_pattern": {
              "type": "boolean",
              "description": "Render a faint gradient pattern behind the section",
              "default": false
            }
          },
          "additionalProperties": true
        }
      },
      "required": ["content"],
      "additionalProperties": true,
      "examples": [
        {
          "block": "logos",
          "design": {
            "display_mode": "grid",
            "show_pattern": true
          },
          "content": {
            "title": "Trusted by leading labs",
            "subtitle": "Partners + collaborators",
            "text": "Teams building safety-first AI with us.",
            "logos": [
              {
                "name": "DeepMind",
                "image": "logos/deepmind.svg",
                "url": "https://deepmind.com",
                "external": true
              },
              {
                "name": "OpenAI",
                "image": "logos/openai.png",
                "description": "Alignment research partner"
              }
            ],
            "cta": {
              "text": "See case studies",
              "url": "/case-studies/",
              "icon": "hero/arrow-right"
            }
          }
        }
      ]
    }
  ]
}
