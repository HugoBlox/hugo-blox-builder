{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/stats.json",
  "title": "Stats Block Schema",
  "description": "Schema for the Stats block - displays statistics in cards, compact rows, or a minimal grid",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "stats",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "description": "Content configuration for the stats block",
          "properties": {
            "title": {
              "type": "string",
              "description": "Section title (supports Markdown)"
            },
            "text": {
              "type": "string",
              "description": "Section description (supports Markdown)"
            },
            "items": {
              "type": "array",
              "description": "Array of statistics to display",
              "items": {
                "type": "object",
                "properties": {
                  "statistic": {
                    "type": ["string", "number"],
                    "description": "The statistic value/number (supports Markdown)",
                    "examples": ["120+", 3.2]
                  },
                  "description": {
                    "type": "string",
                    "description": "Description of the statistic (supports Markdown)"
                  },
                  "icon": {
                    "type": "string",
                    "description": "Icon identifier (e.g., 'hero/chart-bar', 'hero/user-group')"
                  },
                  "sub_metric": {
                    "type": "string",
                    "description": "Additional context or sub-metric (supports Markdown)"
                  }
                },
                "required": ["statistic", "description"],
                "additionalProperties": false
              },
              "minItems": 1
            }
          },
          "required": ["items"],
          "additionalProperties": false
        },
        "design": {
          "type": "object",
          "description": "Design options for the stats block",
          "properties": {
            "layout": {
              "type": "string",
              "enum": ["cards", "compact", "minimal"],
              "description": "Display layout style",
              "default": "cards"
            }
          },
          "additionalProperties": true
        }
      },
      "required": ["content"],
      "additionalProperties": true,
      "examples": [
        {
          "block": "stats",
          "content": {
            "title": "Impact metrics",
            "text": "Momentum across research and product work.",
            "items": [
              {
                "statistic": "120+",
                "description": "peer-reviewed papers",
                "icon": "hero/document-text"
              },
              {
                "statistic": "5M",
                "description": "dataset downloads",
                "sub_metric": "across three releases"
              },
              {
                "statistic": 42,
                "description": "team members"
              }
            ]
          },
          "design": {
            "layout": "cards"
          }
        }
      ]
    }
  ]
}
