{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/cta-button-list.json",
  "title": "CTA Button List Block Schema",
  "description": "Schema for the CTA Button List block - renders stacked buttons with icons",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "cta-button-list",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "properties": {
            "buttons": {
              "type": "array",
              "description": "Buttons to render",
              "items": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "description": "Button label (supports Markdown)"
                  },
                  "url": {
                    "type": "string",
                    "description": "Button URL"
                  },
                  "icon": {
                    "type": "string",
                    "description": "Optional leading icon (icon pack format: pack/icon-name)"
                  }
                },
                "required": ["text", "url"],
                "additionalProperties": false
              },
              "minItems": 1
            }
          },
          "required": ["buttons"],
          "additionalProperties": false
        }
      },
      "required": ["content"],
      "additionalProperties": true,
      "examples": [
        {
          "block": "cta-button-list",
          "content": {
            "buttons": [
              {
                "text": "Join the waitlist",
                "url": "https://hugoblox.com/waitlist",
                "icon": "hero/sparkles"
              },
              {
                "text": "Read the docs",
                "url": "/docs/",
                "icon": "hero/book-open"
              }
            ]
          }
        }
      ]
    }
  ]
}
