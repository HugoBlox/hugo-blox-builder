{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/resume-languages.json",
  "title": "Resume Languages Block Schema",
  "description": "Schema for the Languages block - renders language proficiency from the author profile",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "resume-languages",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string",
              "description": "Author username (references data/authors/{username}.yaml)",
              "default": "me"
            },
            "title": {
              "type": "string",
              "description": "Section title (supports Markdown)"
            },
            "text": {
              "type": "string",
              "description": "Section description (supports Markdown)"
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["content"],
      "additionalProperties": true,
      "examples": [
        {
          "block": "resume-languages",
          "content": {
            "username": "me",
            "title": "Languages",
            "text": "Comfortable in English, French, and Mandarin."
          }
        }
      ]
    }
  ]
}
