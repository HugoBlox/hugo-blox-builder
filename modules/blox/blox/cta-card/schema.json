{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/cta-card.json",
  "title": "CTA Card Block Schema",
  "description": "Schema for the CTA Card block - displays a prominent call-to-action card with title, text, and button",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "cta-card",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "description": "Content configuration for the CTA card block",
          "properties": {
            "title": {
              "type": "string",
              "description": "Card title (supports Markdown)"
            },
            "text": {
              "type": "string",
              "description": "Card description text (supports Markdown)"
            },
            "button": {
              "type": "object",
              "description": "Call-to-action button",
              "properties": {
                "url": {
                  "type": "string",
                  "description": "Button URL (supports hash fragments, relative paths, and absolute URLs)"
                },
                "text": {
                  "type": "string",
                  "description": "Button text"
                },
                "icon": {
                  "type": "string",
                  "description": "Optional button icon (icon pack format: pack/icon-name)"
                }
              },
              "required": ["url", "text"],
              "additionalProperties": false
            }
          },
          "required": ["title", "text", "button"],
          "additionalProperties": false
        },
        "design": {
          "type": "object",
          "description": "Card-specific styling options",
          "properties": {
            "card": {
              "type": "object",
              "properties": {
                "css_class": {
                  "type": "string",
                  "description": "CSS classes to apply to the card (e.g., glassmorphism-primary, glass-ring)"
                },
                "css_style": {
                  "type": "string",
                  "description": "Inline CSS for the card container"
                },
                "text_color": {
                  "type": "string",
                  "enum": ["auto", "light", "dark"],
                  "description": "Text color mode for optimal contrast (auto detects based on background)",
                  "default": "auto"
                },
                "overlay_opacity": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "description": "Glassmorphism overlay opacity for fine-tuning contrast",
                  "default": 0.15
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": true
        }
      },
      "required": ["content"],
      "additionalProperties": true,
      "examples": [
        {
          "block": "cta-card",
          "design": {
            "background": {
              "gradient": {
                "start": "primary-500",
                "end": "secondary-600",
                "direction": "135"
              },
              "text_color_light": true
            },
            "card": {
              "css_class": "glassmorphism-primary",
              "text_color": "auto",
              "overlay_opacity": 0.15
            }
          },
          "content": {
            "title": "Ready to launch?",
            "text": "Ship a Hugo Blox site with production-ready Tailwind 4 in minutes.",
            "button": {
              "url": "/contact/",
              "text": "Talk to us",
              "icon": "hero/arrow-right"
            }
          }
        }
      ]
    }
  ]
}
