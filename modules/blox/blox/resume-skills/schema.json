{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/resume-skills.json",
  "title": "Resume Skills",
  "description": "Displays skills and proficiency pulled from an author profile",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "resume-skills",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "description": "Content configuration for the skills block",
          "properties": {
            "username": {
              "type": "string",
              "description": "Author username (references data/authors/{username}.yaml)",
              "default": "me"
            },
            "title": {
              "type": "string",
              "description": "Section title (supports Markdown)"
            },
            "text": {
              "type": "string",
              "description": "Section description (supports Markdown)",
              "x-multiline": true,
              "format": "textarea"
            }
          },
          "additionalProperties": false
        },
        "design": {
          "type": "object",
          "description": "Layout options for the skills grid",
          "properties": {
            "columns": {
              "type": "integer",
              "description": "Number of columns used to render skill groups (1-5). Responsive: 2 cols applies at md, 3 at lg, 4 at xl, 5 at 2xl.",
              "default": 2,
              "minimum": 1,
              "maximum": 5,
              "examples": [
                2,
                3
              ]
            }
          },
          "additionalProperties": true,
          "$comment": "Skill groups in the author profile support: name, description, color (progress bar fill), color_border, items (array). Each item supports: label/name, description, icon, level (1-5 for progress bar)."
        }
      },
      "required": [
        "content"
      ],
      "additionalProperties": true,
      "examples": [
        {
          "block": "resume-skills",
          "content": {
            "username": "me",
            "title": "Skills",
            "text": "Tooling and languages I use most often."
          },
          "design": {
            "columns": 3
          }
        }
      ]
    }
  ]
}
