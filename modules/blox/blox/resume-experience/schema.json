{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/resume-experience.json",
  "title": "Resume Experience",
  "description": "Renders work history and education timelines from an author profile",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "resume-experience",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string",
              "description": "Author username (references data/authors/{username}.yaml)",
              "default": "me"
            },
            "text": {
              "type": "string",
              "description": "Optional lead-in copy above the timelines",
              "x-multiline": true,
              "format": "textarea"
            }
          },
          "additionalProperties": false
        },
        "design": {
          "type": "object",
          "description": "Display options for experience and education timelines",
          "properties": {
            "date_format": {
              "type": "string",
              "description": "Date format for experience and education entries (Go time layout)",
              "default": "Jan 2006",
              "examples": ["Jan 2006", "January 2006", "2006"]
            },
            "is_education_first": {
              "type": "boolean",
              "description": "Show education timeline before experience",
              "default": false
            }
          },
          "additionalProperties": true
        },
        "$comment": "Experience and education items in the author profile support: role/position, org/company_name, start/date_start, end/date_end, summary, icon, tags (array), and button (object with url, text, icon)."
      },
      "required": ["content"],
      "additionalProperties": true,
      "examples": [
        {
          "block": "resume-experience",
          "content": {
            "username": "me",
            "text": "Highlights from my recent roles and education."
          },
          "design": {
            "date_format": "January 2006",
            "is_education_first": false
          }
        }
      ]
    }
  ]
}
