{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/features.json",
  "title": "Features",
  "description": "Displays a grid of features with icons, names, and descriptions",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "features",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "description": "Content configuration for the features block",
          "properties": {
            "title": {
              "type": "string",
              "description": "Section title (supports Markdown)"
            },
            "text": {
              "type": "string",
              "description": "Section description (supports Markdown)",
              "x-multiline": true,
              "format": "textarea"
            },
            "items": {
              "type": "array",
              "description": "Array of feature items",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Feature name/title (supports Markdown)"
                  },
                  "description": {
                    "type": "string",
                    "description": "Feature description (supports Markdown)",
                    "x-multiline": true,
                    "format": "textarea"
                  },
                  "icon": {
                    "type": "string",
                    "description": "Feature icon. Supports hero/ (Heroicons), brands/ (brand logos), devicon/ (dev tools), or custom packs. Format: 'pack/icon-name' or just 'icon-name' for hero.",
                    "examples": ["hero/swatch", "hero/puzzle-piece", "brands/github", "devicon/python"]
                  }
                },
                "required": ["name", "description"],
                "additionalProperties": false
              },
              "minItems": 1
            }
          },
          "required": ["items"],
          "additionalProperties": false
        }
      },
      "required": ["content"],
      "additionalProperties": true,
      "examples": [
        {
          "block": "features",
          "content": {
            "title": "Everything you need",
            "text": "From data to deployment, one stack.",
            "items": [
              {
                "name": "Tailwind 4",
                "description": "Pre-configured tokens, gradients, and typography.",
                "icon": "hero/swatch"
              },
              {
                "name": "Preact blocks",
                "description": "Composable UI shipped with sensible defaults.",
                "icon": "hero/puzzle-piece"
              },
              {
                "name": "Docs-ready",
                "description": "Markdown, data-driven content, and inline shortcodes.",
                "icon": "hero/book-open"
              }
            ]
          }
        }
      ]
    }
  ]
}
