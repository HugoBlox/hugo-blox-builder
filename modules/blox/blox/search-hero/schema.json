{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/search-hero.json",
  "title": "Search Hero Block Schema",
  "description": "A hero section with prominent search functionality and optional stats",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "search-hero",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "properties": {
            "badge": {
              "type": "object",
              "description": "Optional badge displayed above the title",
              "properties": {
                "text": {
                  "type": "string",
                  "description": "Badge text"
                },
                "show_pulse": {
                  "type": "boolean",
                  "description": "Show pulsing dot indicator",
                  "default": false
                }
              },
              "required": ["text"],
              "additionalProperties": false
            },
            "title": {
              "type": "string",
              "description": "Main title. Use ==text== syntax to apply gradient highlighting to words or phrases."
            },
            "subtitle": {
              "type": "string",
              "description": "Subtitle text"
            },
            "search_placeholder": {
              "type": "string",
              "description": "Search input placeholder",
              "default": "Search for answers..."
            },
            "suggestions": {
              "type": "array",
              "description": "Quick search suggestion chips that open Pagefind with a preset query",
              "items": {
                "type": "string"
              }
            },
            "stats": {
              "type": "array",
              "description": "Optional lightweight stats below the search box",
              "items": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "string",
                    "description": "Stat value (supports Markdown)"
                  },
                  "label": {
                    "type": "string",
                    "description": "Stat label"
                  }
                },
                "required": ["value", "label"],
                "additionalProperties": false
              }
            }
          },
          "required": ["title"],
          "additionalProperties": false
        }
      },
      "required": ["content"],
      "additionalProperties": true,
      "examples": [
        {
          "block": "search-hero",
          "design": {
            "background": {
              "gradient_mesh": {
                "enable": true,
                "style": "waves",
                "colors": ["primary-500/25", "secondary-500/25"],
                "animation": "float"
              }
            }
          },
          "content": {
            "badge": {
              "text": "Instant answers",
              "show_pulse": true
            },
            "title": "Master ==AI tools==. Find answers faster.",
            "subtitle": "Search our docs, playbooks, and notebooks.",
            "search_placeholder": "Search documentation...",
            "suggestions": ["Get started", "Deploy with Hugo Blox"],
            "stats": [
              {
                "value": "250+",
                "label": "articles"
              },
              {
                "value": "9/10",
                "label": "avg. satisfaction"
              }
            ]
          }
        }
      ]
    }
  ]
}
