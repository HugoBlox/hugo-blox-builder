{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/testimonials.json",
  "title": "Testimonials",
  "description": "Displays quotes with avatars, names, and roles",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "testimonials",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "Section title (supports Markdown)"
            },
            "text": {
              "type": "string",
              "description": "Section description (supports Markdown)",
              "x-multiline": true,
              "format": "textarea"
            },
            "items": {
              "type": "array",
              "description": "Testimonial entries",
              "items": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "description": "Quoted testimonial text (supports Markdown)",
                    "x-multiline": true,
                    "format": "textarea"
                  },
                  "name": {
                    "type": "string",
                    "description": "Person's name"
                  },
                  "role": {
                    "type": "string",
                    "description": "Role or organization"
                  },
                  "image": {
                    "type": "string",
                    "description": "Avatar filename in assets/media/. Image is processed to 96x96 (displayed at 48x48 for retina).",
                    "examples": [
                      "people/casey.jpg",
                      "testimonials/avatar.png"
                    ]
                  }
                },
                "required": [
                  "text",
                  "name"
                ],
                "additionalProperties": false
              },
              "minItems": 1
            }
          },
          "required": [
            "items"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "content"
      ],
      "additionalProperties": true,
      "examples": [
        {
          "block": "testimonials",
          "content": {
            "title": "What partners say",
            "text": "Teams build faster when they start with Hugo Blox.",
            "items": [
              {
                "text": "\u201cHugo Blox let us ship a research microsite in days instead of weeks.\u201d",
                "name": "Dr. Casey Smith",
                "role": "Research Lead, OpenAI",
                "image": "people/casey.jpg"
              },
              {
                "text": "\u201cGreat developer experience and first-class docs. Our students love it.\u201d",
                "name": "Prof. Lee Nguyen",
                "role": "MIT CSAIL",
                "image": "people/lee.png"
              }
            ]
          }
        }
      ]
    }
  ]
}
