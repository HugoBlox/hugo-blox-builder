{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/team-showcase.json",
  "title": "Team Showcase Block Schema",
  "description": "Schema for the Team Showcase block - displays team members grouped by author taxonomy",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "team-showcase",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "description": "Content configuration for the team showcase block",
          "properties": {
            "title": {
              "type": "string",
              "description": "Section title (supports Markdown)"
            },
            "subtitle": {
              "type": "string",
              "description": "Section subtitle (supports Markdown)"
            },
            "text": {
              "type": "string",
              "description": "Section description (supports Markdown)"
            },
            "user_groups": {
              "type": "array",
              "description": "Filter to authors that belong to these user groups (defaults to all authors). Accepts strings or objects { name, sort_by?, sort_ascending? } for per-group sorting.",
              "items": {
                "oneOf": [
                  { "type": "string" },
                  {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "sort_by": {
                        "type": "string",
                        "description": "Per-group override of sort field"
                      },
                      "sort_ascending": {
                        "type": "boolean",
                        "description": "Per-group override of sort direction"
                      }
                    },
                    "required": ["name"],
                    "additionalProperties": false
                  }
                ]
              },
              "examples": [
                ["Principal Investigators", "PhD Students"],
                [{ "name": "Alumni", "sort_by": "graduation_year", "sort_ascending": false }, "Research Engineers"]
              ]
            },
            "sort_by": {
              "type": "string",
              "description": "Field to sort authors by. Common values: 'name_family' (last name), 'weight', 'graduation_year'. The legacy 'Params.' prefix is optional for compatibility.",
              "enum": ["name_family", "name.family", "family", "last_name", "family_name", "weight", "graduation_year", "title"],
              "default": "name_family"
            },
            "sort_ascending": {
              "type": "boolean",
              "description": "Sort direction (true for ascending, false for descending)",
              "default": true
            },
            "cta": {
              "type": "object",
              "description": "Optional call-to-action displayed beneath the grid",
              "properties": {
                "text": {
                  "type": "string",
                  "description": "Button text"
                },
                "url": {
                  "type": "string",
                  "description": "Button URL (can be relative or absolute)"
                },
                "icon": {
                  "type": "string",
                  "description": "Optional icon name (e.g., 'hero/user-plus')"
                }
              },
              "required": ["text", "url"],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "design": {
          "type": "object",
          "description": "Display toggles for the team showcase",
          "properties": {
            "show_role": {
              "type": "boolean",
              "description": "Show the role from each author profile",
              "default": true
            },
            "show_organizations": {
              "type": "boolean",
              "description": "Display the first organization/affiliation per profile",
              "default": true
            },
            "show_interests": {
              "type": "boolean",
              "description": "Display interests per profile (capped by max_interests)",
              "default": false
            },
            "show_social": {
              "type": "boolean",
              "description": "Show social media icons pulled from the author profile links",
              "default": true
            },
            "max_interests": {
              "type": "integer",
              "description": "Maximum number of interests to display per profile (0 hides interests; default 3)",
              "default": 3,
              "minimum": 0
            },
            "align": {
              "type": "string",
              "description": "Align the section header and CTA",
              "enum": ["center", "left"],
              "default": "center"
            },
            "max_columns": {
              "type": "integer",
              "description": "Maximum number of columns on wide screens (2-4)",
              "enum": [2, 3, 4],
              "default": 4
            },
            "show_empty_groups": {
              "type": "boolean",
              "description": "If true, show an empty-state message for groups with no matching authors",
              "default": false
            }
          },
          "additionalProperties": true
        }
      },
      "required": ["content"],
      "additionalProperties": true,
      "examples": [
        {
          "block": "team-showcase",
          "content": {
            "title": "Meet the team",
            "subtitle": "Research + Engineering",
            "text": "We combine safety research with high-velocity engineering.",
            "user_groups": [
              "Principal Investigators",
              "Research Engineers",
              { "name": "Alumni", "sort_by": "graduation_year", "sort_ascending": false }
            ],
            "sort_by": "name_family",
            "sort_ascending": true,
            "cta": {
              "text": "Join us",
              "url": "/apply",
              "icon": "hero/user-plus"
            }
          },
          "design": {
            "show_role": true,
            "show_organizations": true,
            "show_interests": true,
            "max_interests": 3,
            "show_social": true,
            "align": "left",
            "max_columns": 3,
            "show_empty_groups": false
          }
        }
      ]
    }
  ]
}
