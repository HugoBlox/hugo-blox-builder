{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/cta-image-paragraph.json",
  "title": "CTA Image Paragraph",
  "description": "Alternating media and copy with optional feature bullets and button",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "cta-image-paragraph",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "properties": {
            "items": {
              "type": "array",
              "description": "CTA sections with media and supporting copy",
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "Heading for the CTA item"
                  },
                  "text": {
                    "type": "string",
                    "description": "Supporting paragraph (supports Markdown)",
                    "x-multiline": true,
                    "format": "textarea"
                  },
                  "image": {
                    "type": "string",
                    "description": "Image filename in assets/media/. Responsive images are generated automatically (400-1200px). GIFs are converted to webp.",
                    "examples": [
                      "screenshots/product.png",
                      "features/demo.jpg"
                    ]
                  },
                  "feature_icon": {
                    "type": "string",
                    "description": "Icon used before each feature bullet",
                    "default": "check"
                  },
                  "features": {
                    "type": "array",
                    "description": "Bullet list shown under the paragraph",
                    "items": {
                      "type": "string"
                    }
                  },
                  "button": {
                    "type": "object",
                    "description": "Optional CTA button",
                    "properties": {
                      "text": {
                        "type": "string",
                        "x-multiline": true,
                        "format": "textarea"
                      },
                      "url": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "text",
                      "url"
                    ],
                    "additionalProperties": false
                  }
                },
                "required": [
                  "title",
                  "text",
                  "image"
                ],
                "additionalProperties": false
              },
              "minItems": 1
            }
          },
          "required": [
            "items"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "content"
      ],
      "additionalProperties": true,
      "examples": [
        {
          "block": "cta-image-paragraph",
          "content": {
            "items": [
              {
                "title": "Ship polished docs with Hugo Blox",
                "text": "Pair Markdown content with responsive imagery and reusable CTAs.",
                "image": "screenshots/docs.png",
                "feature_icon": "hero/check-circle",
                "features": [
                  "Responsive images generated automatically",
                  "Markdown-first authoring",
                  "Works with Netlify, Vercel, and GitHub Pages"
                ],
                "button": {
                  "text": "Read the guide",
                  "url": "/docs/get-started/"
                }
              },
              {
                "title": "Launch production-ready marketing pages",
                "text": "Use alternating layouts to highlight product benefits.",
                "image": "screenshots/marketing.png"
              }
            ]
          }
        }
      ]
    }
  ]
}
