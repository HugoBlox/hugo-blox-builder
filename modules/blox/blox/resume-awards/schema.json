{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/resume-awards.json",
  "title": "Resume Awards",
  "description": "Renders awards/certifications from the referenced author profile",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "resume-awards",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "description": "Content configuration for the awards block",
          "properties": {
            "username": {
              "type": "string",
              "description": "Author username (references data/authors/{username}.yaml)",
              "default": "me"
            },
            "title": {
              "type": "string",
              "description": "Section title (supports Markdown)"
            },
            "text": {
              "type": "string",
              "description": "Section description (supports Markdown)",
              "x-multiline": true,
              "format": "textarea"
            }
          },
          "additionalProperties": false
        },
        "design": {
          "type": "object",
          "description": "Awards-specific display options",
          "properties": {
            "date_format": {
              "type": "string",
              "description": "Date format for award dates (Go time layout)",
              "default": "January 2006",
              "examples": ["2006", "Jan 2006", "January 2, 2006"]
            }
          },
          "additionalProperties": true,
          "$comment": "Award items in the author profile support: title, icon, url, awarder, date/date_start, summary, certificate_url."
        }
      },
      "required": ["content"],
      "additionalProperties": true,
      "examples": [
        {
          "block": "resume-awards",
          "content": {
            "username": "me",
            "title": "Awards",
            "text": "Selected recognition and certifications."
          },
          "design": {
            "date_format": "January 2006"
          }
        }
      ]
    }
  ]
}
