{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hugoblox.com/schemas/blocks/resume-biography.json",
  "title": "Resume Biography Block Schema",
  "description": "Schema for the Biography block - renders author details with avatar, banner, bio, and social links",
  "allOf": [
    {
      "$ref": "../shared/schemas/base-block.json"
    },
    {
      "type": "object",
      "properties": {
        "block": {
          "const": "resume-biography",
          "description": "Block type identifier"
        },
        "content": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string",
              "description": "Author username (references data/authors/{username}.yaml)",
              "default": "me"
            },
            "text": {
              "type": "string",
              "description": "Override biography text (Markdown); falls back to author profile bio when omitted"
            },
            "button": {
              "type": "object",
              "description": "Optional button beneath the bio",
              "properties": {
                "url": {
                  "type": "string"
                },
                "text": {
                  "type": "string"
                }
              },
              "required": ["url", "text"],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "design": {
          "type": "object",
          "description": "Presentation options for the biography",
          "properties": {
            "avatar": {
              "type": "object",
              "properties": {
                "size": {
                  "type": "string",
                  "enum": ["small", "medium", "large", "xl", "xxl"],
                  "description": "Avatar display size",
                  "default": "medium"
                },
                "shape": {
                  "type": "string",
                  "enum": ["circle", "square", "rounded"],
                  "description": "Avatar shape",
                  "default": "circle"
                }
              },
              "additionalProperties": false
            },
            "banner": {
              "type": "object",
              "properties": {
                "filename": {
                  "type": "string",
                  "description": "Optional banner image filename in assets/media/"
                }
              },
              "additionalProperties": false
            },
            "biography": {
              "type": "object",
              "properties": {
                "style": {
                  "type": "string",
                  "description": "Inline CSS style applied to the bio text wrapper",
                  "examples": ["max-width: 60ch;"]
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": true
        }
      },
      "required": ["content"],
      "additionalProperties": true,
      "examples": [
        {
          "block": "resume-biography",
          "content": {
            "username": "me",
            "text": "I build AI research tooling and mentor applied ML teams.",
            "button": {
              "url": "/cv.pdf",
              "text": "Download CV"
            }
          },
          "design": {
            "avatar": {
              "size": "large",
              "shape": "circle"
            },
            "banner": {
              "filename": "banners/lab.jpg"
            },
            "biography": {
              "style": "max-width: 60ch;"
            }
          }
        }
      ]
    }
  ]
}
